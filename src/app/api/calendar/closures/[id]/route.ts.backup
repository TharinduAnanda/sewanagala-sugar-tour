import { NextRequest, NextResponse } from 'next/server'
import db from '@/lib/db'

// PUT /api/calendar/closures/[id]
export async function PUT(
  req: NextRequest, 
  { params }: { params: { id: string } }
) {
  try {
    const { id } = params
    const body = await req.json()
    const { reason, closure_type, notes } = body
    
    const [result] = await db.query<any>(
      `UPDATE factory_closures 
       SET reason = ?, closure_type = ?, notes = ?, updated_at = CURRENT_TIMESTAMP 
       WHERE id = ?`,
      [reason, closure_type, notes || '', id]
    )
    
    if ((result as any).affectedRows === 0) {
      return NextResponse.json({ 
        success: false, 
        error: 'Closure not found' 
      }, { status: 404 })
    }
    
    return NextResponse.json({ 
      success: true, 
      message: 'Closure updated successfully' 
    })
  } catch (error: any) {
    console.error('Error updating closure:', error)
    return NextResponse.json({ 
      success: false, 
      error: error.message 
    }, { status: 500 })
  }
}

// DELETE /api/calendar/closures/[id]
export async function DELETE(
  req: NextRequest, 
  { params }: { params: { id: string } }
) {
  try {
    const { id } = params
    
    const [result] = await db.query<any>(
      'DELETE FROM factory_closures WHERE id = ?',
      [id]
    )
    
    if ((result as any).affectedRows === 0) {
      return NextResponse.json({ 
        success: false, 
        error: 'Closure not found' 
      }, { status: 404 })
    }
    
    return NextResponse.json({ 
      success: true, 
      message: 'Closure deleted successfully' 
    })
  } catch (error: any) {
    console.error('Error deleting closure:', error)
    return NextResponse.json({ 
      success: false, 
      error: error.message 
    }, { status: 500 })
  }
}
