import { NextRequest, NextResponse } from 'next/server'
import pool from '@/lib/db'

export async function PUT(
  request: NextRequest,
  { params }: { params: { id: string } }
) {
  try {
    const id = params.id
    const body = await request.json()
    const { name, email, visitor_count, visit_date, visit_time, special_requirements } = body

    if (!id) {
      return NextResponse.json(
        { success: false, message: 'Booking ID is required' },
        { status: 400 }
      )
    }

    // Validate required fields
    if (!name || !email || !visitor_count || !visit_date || !visit_time) {
      return NextResponse.json(
        { success: false, message: 'All fields are required' },
        { status: 400 }
      )
    }

    // Validate visitor count
    if (visitor_count < 1 || visitor_count > 50) {
      return NextResponse.json(
        { success: false, message: 'Visitor count must be between 1 and 50' },
        { status: 400 }
      )
    }

    // Validate email format
    const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/
    if (!emailRegex.test(email)) {
      return NextResponse.json(
        { success: false, message: 'Invalid email format' },
        { status: 400 }
      )
    }

    // Check if booking exists and is not cancelled/completed
    const [bookings] = await pool.query(
      'SELECT * FROM bookings WHERE id = ?',
      [id]
    )

    const bookingsArray = bookings as any[]

    if (bookingsArray.length === 0) {
      return NextResponse.json(
        { success: false, message: 'Booking not found' },
        { status: 404 }
      )
    }

    const currentBooking = bookingsArray[0]

    if (currentBooking.status === 'cancelled' || currentBooking.status === 'completed') {
      return NextResponse.json(
        { success: false, message: `Cannot modify ${currentBooking.status} bookings` },
        { status: 400 }
      )
    }

    // Update the booking
    const [result] = await pool.query(
      `UPDATE bookings 
       SET name = ?, email = ?, visitor_count = ?, visit_date = ?, 
           visit_time = ?, special_requirements = ?, updated_at = NOW() 
       WHERE id = ?`,
      [name, email, visitor_count, visit_date, visit_time, special_requirements || null, id]
    )

    const updateResult = result as any

    if (updateResult.affectedRows === 0) {
      return NextResponse.json(
        { success: false, message: 'Failed to update booking' },
        { status: 500 }
      )
    }

    return NextResponse.json({
      success: true,
      message: 'Booking updated successfully'
    })
  } catch (error: any) {
    console.error('Error updating booking:', error)
    return NextResponse.json(
      { success: false, message: 'Failed to update booking', error: error.message },
      { status: 500 }
    )
  }
}
